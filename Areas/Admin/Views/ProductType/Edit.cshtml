@model Nike.Models.EF.ProductType

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm("Edit", "ProductType", FormMethod.Post, new { enctype = "multipart/form-data" }))
